<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ePizzaHub.WebUI</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                <img src="~/images/logo.png" style="height: 40px" class="d-inline-block mb-1" />
                <span class="d-inline-block">ePizzaHub</span>
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Dashboard" asp-action="Index">Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Item" asp-action="Index">Item List</a>
                        </li>
                    </ul>
                </div>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <span class="nav-link text-dark">Welcome: @CurrentUser.Name</span>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="LogOut">Log Out</a>
                        </li>
                    </ul>

                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer id="footer">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-md-6 mb-2">
                    <div class="mb-4">
                        <h3>ePizza Hub</h3>
                        <p class="text-justify">There is something for everyone here. The vegetarians, the non vegetarians, ......</p>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 mb-2">
                    <div class="mb-4 ml-md-4">
                        <h3>Company</h3>
                        <ul class="list-unstyled">
                            <li><a href="#" class="py-1">About Us</a></li>
                            <li><a href="#" class="py-1">Contact Us</a></li>
                            <li><a href="#" class="py-1"> Terms and Conditions</a></li>
                            <li><a href="#" class="py-1">Privacy Policy</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 mb-2">
                    <div class="mb-4">
                        <h3>Have questions?</h3>
                        <div class="mb-3">
                            <ul class="list-unstyled">
                                <li class="py-1"><i class="bi bi-geo-alt"></i> C43, Sector 2 </li>
                                <li class="py-1"><a href="#"><i class="bi bi-phone"></i> +234 4641 4524</a></li>
                                <li class="py-1"><a href="#"><i class="bi bi-envelope"></i> info@pizzahub.com</a></li>
                            </ul>
                        </div>
                        </div>
                </div>

            </div>
            <div class="row">
                <div class="col-md-12 text-center">
                    Copyright @DateTime.Now.Year | All rights reserved | This website is made with <i class="bi bi-heart" aria-hidden="true"></i>
                    by <a href="http://dotnettricks.com" target="_blank">www.dotnettricks.com</a>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
